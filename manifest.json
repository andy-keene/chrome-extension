{
  "manifest_version": 2,

  "name": "Sample Extension",
  "description": "This extension gets all the links on the current page",
  "version": "1.0",

  "background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "permissions": [
    "background",
    "storage",
    "tabs",
    "https://ajax.googleapis.com/",
    "http://*/*",
    "https://*/*"
  ]
}